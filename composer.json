{
    "name": "shivammathur/countrycity",
    "description": "API to get all countries and all cities in a country.",
    "keywords": [
        "cities",
        "countries",
        "php",
        "rest",
        "dropdown",
        "psr7",
        "geodata"
    ],
    "homepage": "http://github.com/shivammathur",
    "license": "MIT",
    "authors": [
        {
            "name": "Shivam Mathur",
            "email": "contact@shivammathur.com",
            "homepage": "https://shivammathur.com",
            "role": "author"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-iconv": "*",
        "ext-mbstring": "*",
        "halaxa/json-machine": "*",
        "slim/http-cache": "^1.0",
        "slim/php-view": "^3.0",
        "slim/slim": "^4.0",
        "php-di/php-di": "^6.4",
        "slim/psr7": "^1.1"
    },
    "require-dev": {
        "symfony/process": "^5.4",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "*"
    },
    "suggest": {
        "ext-pcov": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "CountryCity\\API\\": "api/v1/",
            "CountryCity\\Templates\\": "templates/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CountryCity\\Tests\\API\\": "tests/api/v1"
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "start": "php -S localhost:8000 index.php",
        "test": "./vendor/bin/phpunit"
    },
    "support": {
        "email": "contact@shivammathur.com",
        "issues": "https://github.com/shivammathur/countrycity/issues"
    }
}
